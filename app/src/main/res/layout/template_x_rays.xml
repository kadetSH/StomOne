<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@android:drawable/editbox_background">

    <TextView
        android:id="@+id/template_x_rays_label_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/template_x_rays_label_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/template_x_rays_edit_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/black"
        android:hint="@string/template_x_rays_label_date"
        app:layout_constraintBottom_toBottomOf="@id/template_x_rays_label_date"
        app:layout_constraintStart_toEndOf="@id/template_x_rays_label_date"
        />

    <TextView
        android:id="@+id/template_x_rays_label_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:hint="@string/template_x_rays_label_number"
        app:layout_constraintBottom_toBottomOf="@id/template_x_rays_edit_date"
        app:layout_constraintStart_toEndOf="@id/template_x_rays_edit_date" />

    <TextView
        android:id="@+id/template_x_rays_edit_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginStart="4dp"
        android:hint="@string/template_x_rays_label_number"
        app:layout_constraintBottom_toBottomOf="@id/template_x_rays_label_number"
        app:layout_constraintStart_toEndOf="@id/template_x_rays_label_number" />

    <TextView
        android:id="@+id/template_x_rays_label_type_of_research"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/template_x_rays_label_type_of_research"
        app:layout_constraintStart_toStartOf="@id/template_x_rays_label_date"
        app:layout_constraintTop_toBottomOf="@id/template_x_rays_label_date" />

    <TextView
        android:id="@+id/template_x_rays_edit_type_of_research"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:hint="@string/template_x_rays_label_type_of_research"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/template_x_rays_label_type_of_research"
        app:layout_constraintTop_toTopOf="@+id/template_x_rays_label_type_of_research" />

    <TextView
        android:id="@+id/template_x_rays_label_financing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/template_x_rays_label_financing"
        app:layout_constraintStart_toStartOf="@id/template_x_rays_label_type_of_research"
        app:layout_constraintTop_toBottomOf="@id/template_x_rays_edit_type_of_research" />

    <TextView
        android:id="@+id/template_x_rays_edit_financing"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/black"
        android:ellipsize="none"
        android:hint="@string/template_x_rays_label_financing"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines="2"
        android:scrollHorizontally="false"
        app:layout_constraintStart_toEndOf="@id/template_x_rays_label_financing"
        app:layout_constraintTop_toTopOf="@+id/template_x_rays_label_financing" />

    <TextView
        android:id="@+id/template_x_rays_label_teeth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/template_x_rays_label_teeth"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/template_x_rays_label_financing"
        app:layout_constraintTop_toBottomOf="@id/template_x_rays_edit_financing" />

    <TextView
        android:id="@+id/template_x_rays_edit_teeth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/black"
        android:hint="@string/template_x_rays_label_teeth"
        app:layout_constraintBottom_toBottomOf="@id/template_x_rays_label_teeth"
        app:layout_constraintStart_toEndOf="@id/template_x_rays_label_teeth" />

    <TextView
        android:id="@+id/template_x_rays_label_doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/template_x_rays_label_doctor"
        app:layout_constraintStart_toStartOf="@id/template_x_rays_label_teeth"
        app:layout_constraintTop_toBottomOf="@id/template_x_rays_edit_teeth" />

    <TextView
        android:id="@+id/template_x_rays_edit_doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/black"
        android:text="@string/template_x_rays_label_doctor"
        app:layout_constraintBottom_toBottomOf="@id/template_x_rays_label_doctor"
        app:layout_constraintStart_toEndOf="@id/template_x_rays_label_doctor" />

    <ImageView
        android:id="@+id/template_x_rays_image_loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/template_x_rays_edit_doctor"
        app:srcCompat="@drawable/download_24"
        android:contentDescription="TODO" />


</androidx.constraintlayout.widget.ConstraintLayout>