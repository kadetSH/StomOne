<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@android:drawable/editbox_background">

    <TextView
        android:id="@+id/template_appointment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:hint="@string/template_appointment_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/template_appointment_doctor_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/template_appointment_doctor_label"
        app:layout_constraintStart_toStartOf="@id/template_appointment_title"
        app:layout_constraintTop_toBottomOf="@id/template_appointment_title" />

    <TextView
        android:id="@+id/template_appointment_doctor_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:hint="@string/template_appointment_doctor_label"
        app:layout_constraintStart_toEndOf="@+id/template_appointment_doctor_label"
        app:layout_constraintTop_toTopOf="@+id/template_appointment_doctor_label" />

    <TextView
        android:id="@+id/template_appointment_profession_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/template_appointment_profession_label"
        app:layout_constraintStart_toStartOf="@+id/template_appointment_doctor_label"
        app:layout_constraintTop_toBottomOf="@+id/template_appointment_doctor_edit" />

    <TextView
        android:id="@+id/template_appointment_profession_edit"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines="2"
        android:scrollHorizontally="false"
        android:hint="@string/template_appointment_profession_label"
        app:layout_constraintStart_toEndOf="@+id/template_appointment_profession_label"
        app:layout_constraintTop_toTopOf="@+id/template_appointment_profession_label"
        tools:ignore="TextViewEdits" />

    <TextView
        android:id="@+id/template_appointment_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:text="@string/template_appointment_date_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/template_appointment_profession_label"
        app:layout_constraintTop_toBottomOf="@+id/template_appointment_profession_edit" />

    <TextView
        android:id="@+id/template_appointment_date_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/black"
        android:hint="@string/template_appointment_date_label"
        app:layout_constraintStart_toEndOf="@+id/template_appointment_date_label"
        app:layout_constraintTop_toTopOf="@+id/template_appointment_date_label" />

    <TextView
        android:id="@+id/template_appointment_time_start_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/template_appointment_time_start_label"
        app:layout_constraintBottom_toBottomOf="@+id/template_appointment_date_edit"
        app:layout_constraintStart_toEndOf="@+id/template_appointment_date_edit" />

    <TextView
        android:id="@+id/template_appointment_time_start_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:hint="@string/template_appointment_time_start_label"
        app:layout_constraintStart_toEndOf="@+id/template_appointment_time_start_label"
        app:layout_constraintTop_toTopOf="@+id/template_appointment_time_start_label" />

    <TextView
        android:id="@+id/template_appointment_time_end_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/template_appointment_time_end_label"
        app:layout_constraintStart_toEndOf="@+id/template_appointment_time_start_edit"
        app:layout_constraintTop_toTopOf="@+id/template_appointment_time_start_edit" />

    <TextView
        android:id="@+id/template_appointment_time_end_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:hint="@string/template_appointment_time_end_label"
        app:layout_constraintStart_toEndOf="@+id/template_appointment_time_end_label"
        app:layout_constraintTop_toTopOf="@+id/template_appointment_time_end_label" />
</androidx.constraintlayout.widget.ConstraintLayout>